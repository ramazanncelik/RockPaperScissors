{
  "include": ["src/*.tsx"],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./@types/**", "./node_modules/@types"],
    "types": ["node", "jest"]
  }
}
